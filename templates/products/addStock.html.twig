                                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M23 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                </svg>
                                <span class="ml-4">Usuarios</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

        <div class="content-page">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="d-flex flex-wrap flex-wrap align-items-center justify-content-between mb-4">
                            <div>
                                <h4 class="mb-3">Añadir stock</h4>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12">

                        <div class="row">
                            <div class="col-md-12">
                            <div class="col-md-12">
                                <!-- CON ERROR
                                <div class="form-group has-error has-danger">-->
                                <div class="form-group">
                                    {{ form_label(form.stock, 'Stock*') }}
                                    {{ form_widget(form.stock, {'attr': {'class': 'form-control', 'required': 'true'}}) }}
                                    <!-- CON ERROR
                                    <div class="help-block with-errors">
                                        <ul class="list-unstyled">
                                            <li>Rellene este campo.</li>
                                        </ul>
                                    </div>-->
                                    <input type="hidden" name="_csrf_token"
                                           value="{{ csrf_token('authenticate') }}"
                                    >
                                </div>
                            </div>
                            <div class="col-md-12 mt-5 text-center">
                                <button type="submit" class="btn btn-primary mr-2">Añadir stock</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
