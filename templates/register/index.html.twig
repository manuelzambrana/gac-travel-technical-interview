{% extends 'base.html.twig' %}

{% block title %}Hello RegisterController!{% endblock %}

{% block body %}

    {{ form_start(formulario) }}
    {{ usuario }}
    <div class="wrapper">
        <section class="login-content">
            <div class="container">
                <div class="row align-items-center justify-content-center height-self-center">
                    <div class="col-lg-8">
                        <div class="card auth-card">
                            <div class="card-body p-0">
                                <div class="d-flex align-items-center auth-content">
                                    <div class="col-lg-7 align-self-center">
                                        <div class="p-3">
                                            <h2 class="mb-2">Nuevo registro</h2>

                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="floating-label form-group">

                                                        {{ form_widget(formulario.username, {'attr': {'class': 'floating-input form-control'}}) }}
                                                        {{ form_label(formulario.username, 'Usuario') }}
                                                    </div>
                                                </div>
                                                <div class="col-lg-12">
                                                    <div class="floating-label form-group">
                                                        {{ form_widget(formulario.password, {'attr': {'class': 'floating-input form-control'}}) }}
                                                        {{ form_label(formulario.password, 'Contraseña') }}
                                                    </div>
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-primary">Crear cuenta</button>
                                            <p class="mt-3">
                                                ¿Ya tienes una cuenta? <a href="{{ path('app_login') }}" class="text-primary">Accede a Stockify</a>
                                            </p>

                                        </div>
                                    </div>
                                    <div class="col-lg-5 content-right">
                                        <img src="{{ asset('images/login/01.png') }}" class="img-fluid image-right" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    {{ form_end(formulario) }}
{% endblock %}
